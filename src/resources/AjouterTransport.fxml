<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="400.0" prefHeight="200.0">

    <VBox alignment="CENTER" spacing="10" layoutX="50" layoutY="50">
        <TextField fx:id="txtTransport" promptText="Nom du transport" prefWidth="200"/>
        <TextField fx:id="txtDescription" promptText="Description" prefWidth="200"/>
        <Button fx:id="btnAjouter" text="Ajouter" onAction="#AjouterTransport"/>
        <Button fx:id="btnRetour" text="Retour" onAction="#Retour"/>
    </VBox>

</AnchorPane>

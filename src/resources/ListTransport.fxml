<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="java.controllers.ListTransportController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- ListView pour afficher les transports -->
    <ListView fx:id="transportListView" layoutX="50.0" layoutY="50.0" prefWidth="500.0" prefHeight="300.0">
        <!-- Vous pouvez ajouter des éléments ici via le contrôleur -->
    </ListView>

    <!-- Bouton pour ajouter un nouveau transport -->
    <Button text="Ajouter Transport" layoutX="250.0" layoutY="370.0" onAction="#AjouterTransport" />

</AnchorPane>

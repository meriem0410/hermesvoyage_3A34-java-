<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="java.controllers.AjouterTicketController"
      alignment="CENTER"
      spacing="10"
      prefWidth="400" prefHeight="200">

    <Label text="Ajouter un ticket" style="-fx-font-size: 18px;"/>

    <HBox spacing="10">
        <Label text="Départ:"/>
        <TextField fx:id="txtDepart"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Arrivée:"/>
        <TextField fx:id="txtArrivee"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Prix:"/>
        <TextField fx:id="txtPrix"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Date:"/>
        <TextField fx:id="txtDate"/>
    </HBox>

    <HBox spacing="10">
        <Button text="Ajouter" onAction="#AjouterTicket"/>
        <Button text="Annuler" onAction="#Retour"/>
    </HBox>

</VBox>

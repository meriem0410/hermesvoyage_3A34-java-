                     <image>
                        <Image url="@../../assets/logo.png" />
                     </image>
                     <VBox.margin>
                        <Insets bottom="130.0" top="-170.0" />
                     </VBox.margin>
                  </ImageView>
                  <Label text="Gestion des voyages">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="btnAjoutVoy" onMouseClicked="#gotoAjoutVoy" text="* Ajout voyage">
                     <VBox.margin>
                        <Insets left="20.0" />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="btnListeVoy" onMouseClicked="#gotoListeVoy" text="* Liste des voyages">
                     <VBox.margin>
                        <Insets left="20.0" />
                     </VBox.margin>
                  </Label>
                  <Label text="Gestion des programmes">
                     <VBox.margin>
                        <Insets bottom="5.0" top="10.0" />
                     </VBox.margin>
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="btnAjoutProg" onMouseClicked="#gotoAjoutProg" text="* Ajout programme">
                     <VBox.margin>
                        <Insets left="20.0" />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="btnListeProg" onMouseClicked="#gotoListeProg" text="* Liste des programmes">
                     <VBox.margin>
                        <Insets left="20.0" />
                     </VBox.margin>
                  </Label>
                  <Label text="Gestion des réservations">
                     <VBox.margin>
                        <Insets bottom="5.0" top="10.0" />
                     </VBox.margin>
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="btnListeRes" onMouseClicked="#gotoListeRes" text="* Liste des réservations">
                     <VBox.margin>
                        <Insets left="20.0" />
                     </VBox.margin>
                  </Label>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <padding>
                  <Insets left="20.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
      <VBox layoutX="200.0" prefHeight="50.0" prefWidth="760.0" style="-fx-background-color: #fbfcfa;">

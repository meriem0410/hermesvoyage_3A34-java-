                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="prixInput" VBox.vgrow="NEVER" />
                  <Label text="Date" VBox.vgrow="NEVER">
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <DatePicker fx:id="dateInput" prefHeight="26.0" prefWidth="721.0" VBox.vgrow="NEVER" />
                  <Label text="Type" VBox.vgrow="NEVER">
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <ComboBox fx:id="typeInput" prefHeight="26.0" prefWidth="782.0" VBox.vgrow="NEVER">
                     <items>
                        <FXCollections fx:factory="observableArrayList">
                           <String fx:id="Simple" fx:value="Simple" />
                           <String fx:id="Organisé" fx:value="Organisé" />
                        </FXCollections>
                     </items>
                      <VBox.margin>
                          <Insets bottom="10.0" />
                      </VBox.margin>
                  </ComboBox>
                  <Button fx:id="btnSave" mnemonicParsing="false" onAction="#saveVoyage" style="-fx-background-color: #d6a523;" text="Enregistrer" textFill="WHITE" VBox.vgrow="NEVER">
                     <VBox.margin>
                        <Insets left="305.0" />
                     </VBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />

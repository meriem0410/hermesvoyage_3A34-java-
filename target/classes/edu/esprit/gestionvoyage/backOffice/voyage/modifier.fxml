            <VBox prefHeight="662.0" prefWidth="739.0" style="-fx-border-color: #8ac0b6;" VBox.vgrow="NEVER">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <children>
                  <Label text="Ajout Voyage" textFill="#d6a523" VBox.vgrow="NEVER">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <Label text="Veuillez remplir le formulaire ci-dessous" textFill="#8ac0b6" VBox.vgrow="NEVER">
